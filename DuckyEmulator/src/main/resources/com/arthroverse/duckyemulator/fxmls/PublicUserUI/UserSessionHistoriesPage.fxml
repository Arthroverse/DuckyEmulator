<BorderPane stylesheets="@../../css/PublicCss/UserSessionHistoriesPage.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arthroverse.duckyemulator.UIControllers.PublicUIController.UserSessionHistoriesPageUIController">
    <top>
        <!-- Header Section -->
        <VBox style="-fx-background-color: linear-gradient(to right, #332D7B, #42A5F5); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 0, 2);">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label styleClass="user_welcome_message" text="DuckyEmulator" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI" size="24.0" />
                            </font>
                        </Label>
                        <Label styleClass="user_welcome_sub_message" text="Test History" textFill="#E3F2FD">
                            <font>
                                <Font name="Segoe UI Light" size="18.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="greetingLabel" styleClass="user_welcome_sub_message" text="Welcome, Student" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI" size="16.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <!-- Main Content Area -->
        <MFXScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #f8f9fa; -fx-background: #f8f9fa;">
            <content>
                <VBox style="-fx-background-color: #f8f9fa;">
                    <children>
                        <!-- Welcome Section -->
                        <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label styleClass="welcome_label_large" text="Test History" textFill="#202124" wrapText="true">
                                    <font>
                                        <Font name="Segoe UI" size="32.0" />
                                    </font>
                                </Label>
                                <Label styleClass="welcome_label_subtext" text="View your previous test sessions and performance analytics" textFill="#5f6368" wrapText="true">
                                    <font>
                                        <Font name="Segoe UI" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="40.0" right="40.0" top="40.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- Test History Table Section -->
                        <VBox spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <!-- Table Card -->
                                <StackPane>
                                    <children>
                                        <!-- Card Background -->
                                        <Pane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3); -fx-scale-x: 1.0; -fx-scale-y: 1.0;" styleClass="animated-card" />

                                        <!-- Card Content -->
                                        <VBox spacing="25.0">
                                            <children>
                                                <!-- Header with Delete Button -->
                                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                                    <children>
                                                        <Label text="ðŸ“Š" textFill="#332D7B">
                                                            <font>
                                                                <Font size="36.0" />
                                                            </font>
                                                        </Label>
                                                        <Label styleClass="welcome_label" text="Test Session History" textFill="#202124" wrapText="true">
                                                            <font>
                                                                <Font name="Segoe UI Semibold" size="24.0" />
                                                            </font>
                                                        </Label>
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <MFXButton fx:id="mfxButtonDeleteSession" mnemonicParsing="false" onAction="#btnDeleteSelectedSession" prefHeight="45.0" prefWidth="244.0" style="-fx-background-color: #d32f2f; -fx-background-radius: 22; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.4), 8, 0, 0, 3); -fx-cursor: hand;" styleClass="all_button_normal" text="ðŸ—‘ï¸  Delete Selected">
                                                            <font>
                                                                <Font name="Segoe UI Semibold" size="16.0" />
                                                            </font>
                                                        </MFXButton>
                                                    </children>
                                                </HBox>

                                                <Separator />

                                                <!-- Test History Table -->
                                                <MFXScrollPane fitToHeight="true" fitToWidth="true" prefHeight="500.0" styleClass="mfx-scroll-pane">
                                                    <content>
                                                        <TableView fx:id="tableViewSessionHis" VBox.vgrow="ALWAYS">
                                                            <columns>
                                                                <TableColumn fx:id="tableColSessionName" prefWidth="200.0" text="Session Name">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="sessionName" />
                                                                    </cellValueFactory>
                                                                </TableColumn>

                                                                <TableColumn fx:id="tableColTimeTaken" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Time Taken">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="timeTaken" />
                                                                    </cellValueFactory>
                                                                </TableColumn>

                                                                <TableColumn fx:id="tableColStartTime" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Start Time">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="startTime" />
                                                                    </cellValueFactory>
                                                                </TableColumn>

                                                                <TableColumn fx:id="tableColPercentage" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Percentage">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="percentage" />
                                                                    </cellValueFactory>
                                                                </TableColumn>

                                                                <TableColumn fx:id="tableColPauseTime" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Pause Time">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="pauseTime" />
                                                                    </cellValueFactory>
                                                                </TableColumn>
                                                            </columns>
                                                        </TableView>
                                                    </content>
                                                </MFXScrollPane>

                                                <!-- Pagination -->
                                                <Pagination fx:id="pagination" />

                                                <!-- Action Buttons Section -->
                                                <HBox alignment="CENTER" spacing="30.0">
                                                    <children>
                                                        <MFXButton fx:id="mfxButtonViewResult" mnemonicParsing="false" onAction="#btnViewSelectedResult" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-background-radius: 25; -fx-border-color: linear-gradient(to right, #332D7B, #42A5F5); -fx-border-width: 2; -fx-border-radius: 25; -fx-text-fill: #332D7B; -fx-cursor: hand;" styleClass="all_button_normal" text="ðŸ“‹ View Results">
                                                            <font>
                                                                <Font name="Segoe UI Semibold" size="16.0" />
                                                            </font>
                                                        </MFXButton>
                                                    </children>
                                                </HBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                                            </padding>
                                        </VBox>
                                    </children>
                                </StackPane>
                            </children>
                            <VBox.margin>
                                <Insets bottom="50.0" left="40.0" right="40.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </MFXScrollPane>
    </center>
   <left>
      <MFXScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <VBox prefWidth="280.0" style="-fx-background-color: #fafafa; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">
               <children>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="welcome_label_subtext" text="Navigation" textFill="#5f6368">
                           <font>
                              <Font name="Segoe UI Semibold" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="5.0" top="20.0" />
                           </VBox.margin>
                        </Label>
                        <MFXButton mnemonicParsing="false" onAction="#btnGoToHome" prefHeight="48.0" prefWidth="260.0" style="-fx-background-color: transparent; -fx-background-radius: 24; -fx-border-radius: 24; -fx-text-fill: #5f6368; -fx-border-color: linear-gradient(to right, #332D7B, #42A5F5); -fx-border-width: 1.5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1); -fx-cursor: hand;" styleClass="all_button_normal" text="ðŸ   Home">
                           <font>
                              <Font name="Segoe UI" size="18.0" />
                           </font>
                        </MFXButton>
                        <MFXButton mnemonicParsing="false" onAction="#btnGoToTestHistory" prefHeight="48.0" prefWidth="260.0" style="-fx-background-color: linear-gradient(to right, #332D7B, #42A5F5); -fx-background-radius: 24; -fx-border-radius: 24; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(51,45,123,0.4), 8, 0, 0, 3); -fx-cursor: hand;" styleClass="all_button_normal" text="ðŸ“Š  Test History">
                           <font>
                              <Font name="Segoe UI" size="18.0" />
                           </font>
                        </MFXButton>
                        <Separator>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </Separator>
                        <MFXButton mnemonicParsing="false" onAction="#btnLogout" prefHeight="48.0" prefWidth="260.0" style="-fx-background-color: transparent; -fx-background-radius: 24; -fx-border-radius: 24; -fx-text-fill: #d93025; -fx-effect: dropshadow(gaussian, rgba(217,48,37,0.2), 4, 0, 0, 1); -fx-cursor: hand;" styleClass="all_button_normal" text="ðŸšª  Logout">
                           <font>
                              <Font name="Segoe UI" size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </MFXButton>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </content>
      </MFXScrollPane>
   </left>
</BorderPane>
