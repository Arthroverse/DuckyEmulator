<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UIControllers.AdminUIsControllers.QBankAddUIController">
   <top>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Add new topic">
               <font>
                  <Font name="Proxima Nova Bold" size="30.0" />
               </font>
            </Label>
            <Line endX="100.0" scaleY="5.0" startX="-100.0" />
         </children>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <VBox spacing="20.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="Topic">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="choiceBoxSelectTopic" prefHeight="27.0" prefWidth="428.0" />
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="Classification">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="choiceBoxSelectClass" prefHeight="27.0" prefWidth="357.0" />
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <children>
                        <Label text="Choose image">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnChooseImagePath" mnemonicParsing="false" onAction="#btnChooseImagePathClick" text="Choose">
                           <font>
                              <Font name="Proxima Nova Bold" size="15.0" />
                           </font>
                        </Button>
                        <TextField fx:id="txtFieldImagePath" prefHeight="27.0" prefWidth="259.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <children>
                        <Label text="Question Statement">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="txtAreaQStatement" prefHeight="172.0" prefWidth="301.0" promptText="Enter new question statement here">
                           <font>
                              <Font name="Proxima Nova Bold" size="16.0" />
                           </font>
                        </TextArea>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="Choice 1">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="txtxAreaQChoice1" prefHeight="100.0" prefWidth="407.0" promptText="Enter new choice for choice 1">
                           <font>
                              <Font name="Proxima Nova Bold" size="16.0" />
                           </font>
                        </TextArea>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <children>
                        <Label text="Choice 2">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="txtxAreaQChoice2" prefHeight="100.0" prefWidth="403.0" promptText="Enter new choice for choice 2">
                           <font>
                              <Font name="Proxima Nova Bold" size="16.0" />
                           </font>
                        </TextArea>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="Choice 3">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="txtxAreaQChoice3" prefHeight="100.0" prefWidth="406.0" promptText="Enter new choice for choice 3">
                           <font>
                              <Font name="Proxima Nova Bold" size="16.0" />
                           </font>
                        </TextArea>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="Choice 4">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="txtxAreaQChoice4" prefHeight="100.0" prefWidth="406.0" promptText="Enter new choice for choice 4">
                           <font>
                              <Font name="Proxima Nova Bold" size="16.0" />
                           </font>
                        </TextArea>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="Correct answer">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <ChoiceBox fx:id="choiceBoxCorrectAns" prefHeight="27.0" prefWidth="348.0" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" spacing="200.0">
                     <children>
                        <Button fx:id="btnAddNewTopic" mnemonicParsing="false" onAction="#btnAddNewTopicClick" text="Add">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnResetField" mnemonicParsing="false" onAction="#btnResetFieldClick" text="Reset">
                           <font>
                              <Font name="Proxima Nova Bold" size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
